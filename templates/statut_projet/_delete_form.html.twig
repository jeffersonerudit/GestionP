<form method="post" action="{{ path('app_statut_projet_delete', {'id': statut_projet.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce statut de projet : {{ statut_projet.StatutP }}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ statut_projet.id) }}">
    <button class="btn btn-outline-danger btn-sm">
        <i class="bi bi-trash3-fill" style="font-size: 1.1rem;"></i>
    </button>
</form>
