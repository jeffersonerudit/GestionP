{% extends 'template.html.twig' %}

{% block PageTitle %}
	Gestion de Statut de Projet
{% endblock %}



{% block title %}StatutProjet index{% endblock %}

{% block body %}
{% include 'partials/flash.html.twig' %}

    <h5>Liste de statut du projet</h5>

<table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                
                <th>Statut_P</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for statut_projet in statut_projets %}
            <tr>
                
                <td>{{ statut_projet.StatutP }}</td>
                <td>
                    <a class="btn btn-outline-info btn-sm" href="{{ path('app_statut_projet_show', {'id': statut_projet.id}) }}">
                        <i class="bi bi-view-list" style="font-size: 1rem;"></i>
                    </a>
                    <a class="btn btn-outline-primary btn-sm" href="{{ path('app_statut_projet_edit', {'id': statut_projet.id}) }}">
                        <i class="bi bi-pencil-square" style="font-size: 1.1rem;"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex flex-row">
    <a class="btn btn-outline-info btn-sm" href="{{ path('app_projet') }}">
        <i class="bi bi-x-squarebi bi-x-square" style="font-size: 1.1rem;"></i>
    </a>

    <a class="btn btn-outline-primary btn-sm"  href="{{ path('app_statut_projet_new') }}">
        <i class="bi bi-plus-square" style="font-size: 1.2rem;"></i>
    </a>
    </div>
{% endblock %}
