<form method="post" action="{{ path('app_nature_visite_delete', {'id': nature_visite.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette nature de visiteur : {{ nature_visite.NatureV }}?');">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ nature_visite.id) }}">
    <button class="btn btn-outline-danger btn-sm">
        <i class="bi bi-trash3-fill" style="font-size: 1.1rem;"></i>
    </button>
</form>
