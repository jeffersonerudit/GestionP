	<p>
		<a class="btn btn-outline-primary btn-sm" href="{{ path('personne.create') }}">
			<i class="bi bi-person-plus" style="font-size: 1.5rem;"></i>
		</a>


	</p>


	<!-- Begin Page Content -->


	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<div class="d-flex flex-row float-left">
				<h6 class="m-0 font-weight-bold text-primary">Listes des partenaires avec le mot "{{ word }}"</h6>
			</div>
			<!-- Topbar Search -->
			<div class="d-flex flex-row float-right">

				<form data-turbo="false" method="POST" action="{{ path('app_search_personne') }}" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
					<div class="input-group">
						<input name="word" type="text" class="form-control bg border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
						<div class="input-group-append">
							<button class="btn btn-primary" type="button">
								<i class="fas fa-search fa-sm"></i>
							</button>
						</div>
					</div>
				</form>


			</div>
		</div>


		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>

							<th>Image</th>
							<th>Nom</th>
							<th>Prenom</th>
							<th>Adresse</th>
							<th>Société</th>
							<th>Poste occupé</th>
							<th>Téléphone</th>
							<th>Mail</th>
							<th>Pays</th>
							<th>Ville</th>
							<th>Action</th>
						</tr>
					</thead>
				</tr>
			</thead>
			<tfoot>
				<tr>

					<th>Image</th>
					<th>Nom</th>
					<th>Prenom</th>
					<th>Adresse</th>
					<th>Société</th>
					<th>Poste occupé</th>
					<th>Téléphone</th>
					<th>Mail</th>
					<th>Pays</th>
					<th>Ville</th>
					<th>Action</th>
				</tr>
			</tfoot>
		</tr>
	</tfoot>
	<tbody>
		{% for personne in personnes %}
			<tr>

				<td>
					<img src="{{ vich_uploader_asset(personne, 'imageFile') }}" alt="" class="rounded" width="50" height="50"></td>
				<td class="text-uppercase text-primary">
					<a style=" " href="{{ path('personne.detail', {id: personne.id}) }}">
						<strong>{{personne.Nom()}}</strong>
					</a>
				</td>
				<td class="text-primary">{{personne.Prenom()}}</td>
				<td>{{personne.Photo()}}</td>
				<td class="text-info">{{personne.Societe()}}</td>
				<td class="text-primary">{{personne.Poste()}}</td>
				<td>{{personne.Numero()}}</td>
				<td>{{personne.Mail()}}</td>
				<td>{{personne.Pays()}}</td>
				<td>{{personne.Ville()}}</td>
				<td>
					<div class="d-flex gap-1">
						<a class="btn btn-outline-info btn-sm" href="{{ path('personne.detail', {id: personne.id}) }}">
							<i class="bi bi-view-list" style="font-size: 1.1rem;"></i>
						</a>

						<a class="btn btn-outline-primary btn-sm" href="{{ path('personne.edit', {id: personne.id}) }}">
							<i class="bi bi-pencil-square" style="font-size: 1.1rem;"></i>
						</a>

						<a onclick="return confirm('Voulez-vous vraimeent supprimer {{personne.Nom()}} - {{personne.Prenom()}} ?')" class="btn btn-outline-danger btn-sm" href="{{ path('personne.delete', {id: personne.id}) }}">
							<i class="bi bi-person-x" style="font-size: 1.1rem;"></i>
						</a>

					</div>

				</td>
			</tr>
		{% endfor %}

	</tbody>
</table>


