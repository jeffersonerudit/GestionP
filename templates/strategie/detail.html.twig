{% extends 'template.html.twig' %}
{% block PageTitle %}
	Information de la strategie
{% endblock %}


{% block body %}

	
			<div class="col-lg-8">
				<div class="card z-depth-3">
					<div class="card-body">
						<ul class="nav nav-pills nav-pills-primary nav-justified">
							<li class="nav-item">
								<a href="javascript:void();" data-target="#profile" data-toggle="pill" class="nav-link active show">
									<i class="bi bi-view-list" style="font-size: 1.1rem;"></i>
									<span class="hidden-xs">Detail</span>
								</a>
							</li>
							<li class="nav-item">
							<a href="{{ path('strategie.edit', {id: strategie.id}) }}" data-target="#messages" data-toggle="" class="nav-link">
									<i class="bi bi-pencil-square" style="font-size: 1.1rem;"></i>
									<span class="hidden-xs">Modifier</span>
								</a>
							</li>
							<li class="nav-item">
								<a href="{{ path('app_strategie') }}" data-target="#edit" data-toggle="" class="nav-link">
									<i class="bi bi-arrow-return-left" style="font-size: 1.1rem;"></i>
									<span class="hidden-xs">Retour</span>
								</a>
							</li>
						</ul>
						<div class="tab-content p-3">
							<div class="tab-pane active show" id="profile">
								<h5 class="mb-3">Detail de la personne</h5>
								<div class="row">
									<div class="col-md-6">
										<h6>
											<strong>Code</strong>
										</h6>
										<p>
											{{ strategie.id }}
										</p>
										<h6>
											<strong>Nom</strong>
										</h6>
										<p>
											{{ strategie.nomstrategie }}
										</p>
										<h6>
											<strong>Budget</strong>
										</h6>
										<p>
											{{ strategie.budget }}
										</p>
										
									</div>
									<div class="col-md-6">

										<h6>
											<strong>Date de création</strong>
										</h6>
										<p>
											{{ strategie.DateAt|date('Y-m-d H:i:s') }}


										</p>
										<h6>
											<strong>Date de modification</strong>
										</h6>
										<p>
											{{ strategie.UpdatedAt|date('Y-m-d H:i:s') }}

										</p>
										<h6>
											<strong>Description</strong>
										</h6>
										<p>
											{{ strategie.Description }}
										</p>


									</div>

									<div class="col-md-12">
										<h5 class="mt-2 mb-3">
											<span class="fa fa-clock-o ion-clock float-right"></span>
											Enveloppe prévue</h5>
										<table class="table table-hover table-striped">
											<tbody>
												<tr>
													<td>
														<strong>Personne :
														</strong>
														appartenant à cette strategie est -
														<strong>{{ strategie.Personne.nom }}</strong>
													</td>
												</tr>
												<tr>
													<td>
														<strong>Enveloppe :
														</strong>
														la somme donné est -
														<strong>{{ strategie.enveloppe }}</strong>
													</td>
												</tr>
												
											</tbody>
										</table>


									</div>
								</div>
								<!--/row-->
							</div>
						</div>
					</div>

				</div>
			</div>


		{% endblock %}
