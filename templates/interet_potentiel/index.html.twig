{% extends 'template.html.twig' %}

{% block PageTitle %}
	Gestion des Interêts Potentiels des Partenaires
{% endblock %}

{% block title %}InteretPotentiel index{% endblock %}

{% block body %}
{% include 'partials/flash.html.twig' %}

<h5>Liste des interêt potentions des partenaires</h5>

<table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">

        <thead>
            <tr>
                
                <th>Interet</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for interet_potentiel in interet_potentiels %}
            <tr>
               
                <td>{{ interet_potentiel.Interet }}</td>
                <td>
                    <a class="btn btn-outline-info btn-sm" href="{{ path('app_interet_potentiel_show', {'id': interet_potentiel.id}) }}">
                        <i class="bi bi-view-list" style="font-size: 1rem;"></i>
                    </a>
                    <a class="btn btn-outline-primary btn-sm" href="{{ path('app_interet_potentiel_edit', {'id': interet_potentiel.id}) }}">
                        <i class="bi bi-pencil-square" style="font-size: 1.1rem;"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex flex-row">
    <a class="btn btn-outline-info btn-sm" href="{{ path('app_personne') }}">
        <i class="bi bi-x-squarebi bi-x-square" style="font-size: 1.1rem;"></i>
    </a>
    <a class="btn btn-outline-primary btn-sm" href="{{ path('app_interet_potentiel_new') }}">
        <i class="bi bi-plus-square" style="font-size: 1.2rem;"></i>
    </a>
    </div>
{% endblock %}
