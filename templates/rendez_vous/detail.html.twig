{% extends 'template.html.twig' %}
{% block PageTitle %}
	Information du rendez-vous
{% endblock %}


{% block body %}


	<div class="col-lg-8">
		<div class="card z-depth-3">
			<div class="card-body">
				<ul class="nav nav-pills nav-pills-primary nav-justified">
					<li class="nav-item">
						<a href="javascript:void();" data-target="#profile" data-toggle="pill" class="nav-link active show">
							<i class="bi bi-view-list" style="font-size: 1.1rem;"></i>
							<span class="hidden-xs">Detail</span>
						</a>
					</li>
					<li class="nav-item">
						<a href="{{ path('rendezvous.edit', {id: rendezvous.id}) }}" data-target="#messages" data-toggle="" class="nav-link">
							<i class="bi bi-pencil-square" style="font-size: 1.1rem;"></i>
							<span class="hidden-xs">Modifier</span>
						</a>
					</li>
					<li class="nav-item">
						<a href="{{ path('app_rendezvous') }}" data-target="#edit" data-toggle="" class="nav-link">
							<i class="bi bi-arrow-return-left" style="font-size: 1.1rem;"></i>
							<span class="hidden-xs">Retour</span>
						</a>
					</li>
				</ul>
				<div class="tab-content p-3">
					<div class="tab-pane active show" id="profile">
						<h5 class="mb-3">Detail du rendez-vous</h5>
						<div class="row">
							<div class="col-md-6">
								<h6>
									<strong>Code</strong>
								</h6>
								<p>
									{{ rendezvous.id }}
								</p>
								<h6>
									<strong>Nom du RDV</strong>
								</h6>
								<p>
									{{ rendezvous.nomrdv }}
								</p>
								<h6>
									<strong>Type de RDV</strong>
								</h6>
								<p>
									{{ rendezvous.typerdv }}
								</p>

							</div>
							<div class="col-md-6">

								<h6>
									<strong>Date de création</strong>
								</h6>
								<p>
									{{ rendezvous.CreatedAt|date('Y-m-d H:i:s') }}


								</p>
								<h6>
									<strong>Date de modification</strong>
								</h6>
								<p>
									{{ rendezvous.DateAt|date('Y-m-d H:i:s') }}

								</p>
                                <h6>
                                	<strong>Date prévue du RDV</strong>
                                </h6>
                                <p class="text-danger">
                                	{{ rendezvous.DateRdv|date('Y-m-d H:i:s') }}

                                </p>
								<h6>
									<strong>Description</strong>
								</h6>
								<p>
									{{ rendezvous.Description }}
								</p>


							</div>

							<div class="col-md-12">
								<h5 class="mt-2 mb-3">
									<span class="fa fa-clock-o ion-clock float-right"></span>
									Etat du rendez-vous</h5>
								<table class="table table-hover table-striped">
									<tbody>
										<tr>
											<td>
												<strong>Personne :
												</strong>
												associé à ce rendezvous est -
												<strong>{{ rendezvous.Personne.nom }}</strong>
											</td>
										</tr>
										<tr>
											<td>
												<strong>Statut du RDV :
												</strong>
												le rendez-vous est -
												<strong class="text-warning">{{ rendezvous.statutrdv.statutrdv }}</strong>
											</td>
										</tr>
                                        <tr>
                                        	<td>
                                        		<strong>Lieu prévu du RDV :
                                        		</strong>
                                        		le rendez-vous est prévu a l'adresse -
                                        		<strong>{{ rendezvous.lieu }}</strong>
                                        	</td>
                                        </tr>                                       

									</tbody>
								</table>


							</div>
						</div>
						<!--/row-->
					</div>
				</div>
			</div>

		</div>
	</div>


{% endblock %}

